  runDate              DateTime           @default(now())
  createdAt            DateTime           @default(now())
  changes              CompetitorChange[]

  @@index([runDate])
  @@index([status])
}

// Individual competitor changes detected per snapshot
model CompetitorChange {
  id           String             @id @default(cuid())
  snapshotId   String
  competitor   String
  changeType   String             // PRICING, FEATURE, MARKETING, BROKER_COUNT
  description  String
  impact       String             // LOW, MEDIUM, HIGH
  detectedAt   DateTime           @default(now())
  acknowledged Boolean            @default(false)
  snapshot     CompetitorSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@index([snapshotId])
  @@index([competitor])
  @@index([impact])
  @@index([detectedAt])
}

// Corporate plan accounts
model CorporateAccount {
  id                   String            @id @default(cuid())
  name                 String            // Company name
  tier                 String            // CORP_10, CORP_25, CORP_50, CORP_100
  maxSeats             Int
  adminUserId          String            @unique
  stripeCustomerId     String?
  stripeSubscriptionId String?
  status               String            @default("ACTIVE") // ACTIVE, SUSPENDED, CANCELLED
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  adminUser            User              @relation("CorporateAdmin", fields: [adminUserId], references: [id], onDelete: Cascade)
  seats                CorporateSeat[]
  invitations          CorporateInvite[]

  @@index([tier])
  @@index([status])
}

// Individual seats within a corporate account
model CorporateSeat {
  id                 String            @id @default(cuid())
  corporateAccountId String
  userId             String?           @unique // null = unassigned seat
  status             String            @default("INVITED") // INVITED, ACTIVE, DEACTIVATED
  qrCode             String            @unique @default(cuid())
  onboardedAt        DateTime?
  lastScanAt         DateTime?
  removalCount       Int               @default(0)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  corporateAccount   CorporateAccount  @relation(fields: [corporateAccountId], references: [id], onDelete: Cascade)
  user               User?             @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([corporateAccountId])
  @@index([status])
}

// Invitations to join a corporate account
model CorporateInvite {
  id                 String            @id @default(cuid())
  corporateAccountId String
  email              String
  token              String            @unique @default(cuid())
  status             String            @default("PENDING") // PENDING, ACCEPTED, EXPIRED
  expiresAt          DateTime
  createdAt          DateTime          @default(now())
  corporateAccount   CorporateAccount  @relation(fields: [corporateAccountId], references: [id], onDelete: Cascade)

  @@index([corporateAccountId])
  @@index([email])
  @@index([token])
  @@index([status])
}

// Broker opt-out URL health tracking — monitored by broker-compliance cron
model BrokerOptOutHealth {
  id                  String    @id @default(cuid())
  brokerKey           String    @unique // e.g., "SPOKEO", "WHITEPAGES"
  brokerName          String
  optOutUrl           String?
  privacyEmail        String?
  lastCheckAt         DateTime?
  lastHttpStatus      Int?      // 200, 301, 404, 500, etc.
  lastResponseTimeMs  Int?
  consecutiveFailures Int       @default(0)
  isHealthy           Boolean   @default(true)
  lastError           String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([isHealthy])
  @@index([lastCheckAt])
  @@index([consecutiveFailures])
}

// Compliance audit run results — one record per daily/weekly audit
model ComplianceAuditRun {
  id                    String   @id @default(cuid())
  runType               String   // "daily_url_check", "weekly_full_audit"
  brokersChecked        Int
  urlsHealthy           Int      @default(0)
  urlsBroken            Int      @default(0)
  urlsRedirected        Int      @default(0)
  classificationsValid  Int      @default(0)
  classificationsChanged Int     @default(0)
  highBounceEmails      Int      @default(0)
  alertsSent            Int      @default(0)
  issues                String?  // JSON array of issues found
  duration              Int?     // Execution time in ms
  status                String   // SUCCESS, PARTIAL, FAILED
  createdAt             DateTime @default(now())

  @@index([runType])
  @@index([createdAt])
  @@index([status])
}
