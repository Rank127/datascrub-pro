  source        String   // "mastermind-weekly", "admin-manual", "board-meeting"
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([category, key])
  @@index([category, isActive])
  @@index([isActive])
}

