{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "prisma db push --accept-data-loss && prisma generate && next build",
  "installCommand": "npm install",
  "regions": ["iad1"],
  "rewrites": [
    {
      "source": "/BingSiteAuth.xml",
      "destination": "/api/bing-verify"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/monitoring",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/reports",
      "schedule": "0 8 * * 1"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/seo-agent",
      "schedule": "0 9 * * 0"
    },
    {
      "path": "/api/cron/verify-removals",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/process-removals",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/process-removals",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/process-removals",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/process-removals",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/process-removals",
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/cron/process-removals",
      "schedule": "0 22 * * *"
    },
    {
      "path": "/api/cron/follow-up-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/monthly-rescan",
      "schedule": "0 10 1 * *"
    },
    {
      "path": "/api/cron/link-checker",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/free-user-digest",
      "schedule": "0 10 * * 3"
    },
    {
      "path": "/api/cron/close-resolved-tickets",
      "schedule": "0 11 * * *"
    },
    {
      "path": "/api/cron/ticketing-agent",
      "schedule": "0 8,14,20 * * *"
    }
  ]
}
